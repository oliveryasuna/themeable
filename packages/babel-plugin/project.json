{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "babel-plugin",
  "sourceRoot": "packages/babel-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "packages/babel-plugin/src/index.ts",
        "outputPath": "dist/packages/babel-plugin",
        "tsConfig": "packages/babel-plugin/tsconfig.lib.json",
        "generateExportsField": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",

      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/babel-plugin/**/*.ts",
          "packages/babel-plugin/package.json",
          "packages/babel-plugin/project.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/babel-plugin/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
