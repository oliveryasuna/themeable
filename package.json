{
  "name": "themeable-root",
  "version": "1.0.0",
  "private": true,
  "author": "Oliver Yasuna",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx syncpack fix-mismatches",
    "build": "nx run-many --target=build --all",
    "build:context": "nx run context:build",
    "build:css": "nx run css:build",
    "build:runtime": "nx run runtime:build",
    "build:theme": "nx run theme:build",
    "test": "nx run-many --target=test --all",
    "test:context": "nx run context:test",
    "test:core": "nx run core:test",
    "test:css": "nx run css:test",
    "test:runtime": "nx run runtime:test",
    "test:theme": "nx run theme:test",
    "lint": "nx run-many --target=lint --all",
    "lint:context": "nx run context:lint",
    "lint:css": "nx run css:lint",
    "lint:runtime": "nx run runtime:lint",
    "lint:theme": "nx run theme:lint",
    "chore:outdated-dependencies": "pnpm outdated",
    "chore:unused-dependencies": "nx generate @trumbitta/nx-plugin-unused-deps:check --no-interactive"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.1",
    "csstype": "^3.1.3",
    "deepmerge": "^4.3.1",
    "hoist-non-react-statics": "^3.3.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/types": "^7.24.0",
    "@nx/eslint-plugin": "18.1.2",
    "@nx/jest": "18.2.4",
    "@nx/linter": "^18.1.2",
    "@nx/rollup": "18.1.2",
    "@nx/workspace": "18.1.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/hoist-non-react-statics": "^3.3.5",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.2.69",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-tester": "^11.0.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "18.1.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "type-fest": "^4.13.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.6"
  }
}
